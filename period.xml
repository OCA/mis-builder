<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_fiscal_period_form" model="ir.ui.view">
        <field name="name">account.fiscal.year.form</field>
        <field name="model">account.fiscal.year</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="period_type"/>
                    <field name="quarter_start_date" attrs="{'invisible': [('period_type', '!=', 'quarterly')]}"/>
                    <field name="quarter_end_date" attrs="{'invisible': [('period_type', '!=', 'quarterly')]}"/>
                </group>
            </form>
        </field>
    </record>

</odoo>
