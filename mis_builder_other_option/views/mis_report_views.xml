<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<record id="mis_report_view_kpi_form" model="ir.ui.view">
    <field name="name">mis.report.view.kpi.form</field>
    <field name="model">mis.report.kpi</field>
    <field name="inherit_id" ref="mis_builder.mis_report_view_kpi_form" />
    <field name="arch" type="xml">
        <code position="attributes">
            <attribute name="invisible">1</attribute>
        </code>
        <code position="after">
            <code>
                {bal|crd|deb|pbal|nbal}{pieu}[account
                selector][journal items domain]{other option}
            </code>
        </code>
        <xpath expr="//b[text()='balu[]']/.." position="after">
            <li>
                The <b>other option</b> is a dictionary that contains
                new options to render MIS reporting. For now, only
                <b>period_offset</b> and <b>period_range</b> are supported.
            </li>
        </xpath>
        <xpath expr="//b[text()='pbale[55%]']/.." position="after">
            <li>
                <b>bal[70][]{'period_offset': -1}</b>: variation of the balance
                of account 70 over the previous period
            </li>
            <li>
                <b>bal[70][]{'period_range': 3}</b>: variation of the balance
                of account 70 over the 3 periods
            </li>
        </xpath>
    </field>
</record>

</odoo>
