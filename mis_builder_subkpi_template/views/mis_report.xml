<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mis_report_view_form_inherit">
        <field name="name">mis.report.view.form.inherit</field>
        <field name="model">mis.report</field>
        <field name="inherit_id" ref="mis_builder.mis_report_view_form" />
        <field name="arch" type="xml">
            <!--Set multi default value according to hr_department_sub_kpis-->
            <!--<field name="kpi_ids" position="attributes">-->
                <!--<attribute name="context">{'default_report_id': id, 'default_multi': hr_department_sub_kpis}</attribute>-->
            <!--</field>-->
            <field name="subkpi_ids" position="before">
                <group>
                    <field name="mis_report_subkpi_template_id" />
                </group>
            </field>
            <xpath expr="//field[@name='subkpi_ids']/tree/field[@name='name']" position="after">
                <field name="subkpi_template_line_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="mis_report_view_kpi_form_inherit" model="ir.ui.view">
        <field name="name">mis.report.view.kpi.form.inherit</field>
        <field name="model">mis.report.kpi</field>
        <field name="inherit_id" ref="mis_builder.mis_report_view_kpi_form" />
        <field name="arch" type="xml">
            <field name="multi" position="after">
                <field name="base_expression" invisible="1" />
            </field>
        </field>
    </record>

</odoo>
